<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">My Contacts</h1>
      <p class="text-center lead">Create or edit your contacts</p>

      <%- include('includes/messages') %>

      <form action="/contact/register" method="POST">
        <div class="mb-3">
          <label>Name</label>
          <input
            value="<%= contact.name %>"
            type="text"
            class="form-control"
            name="name"
          />
        </div>

        <div class="mb-3">
          <label>Last Name</label>
          <input
            value="<%= contact.lastname %>"
            type="text"
            class="form-control"
            name="lastname"
          />
        </div>

        <div class="mb-3">
          <label>E-Mail</label>
          <input
            value="<%= contact.email %>"
            type="email"
            class="form-control"
            name="email"
          />
        </div>

        <div class="mb-3">
          <label>Telephone</label>
          <input
            value="<%= contact.telephone %>"
            type="tel"
            class="form-control"
            name="telephone"
          />
        </div>

        <button type="submit" class="btn btn-primary">Create Contact</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
